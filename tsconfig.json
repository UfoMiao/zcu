{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@zcu/core": ["packages/core/src"],
      "@zcu/core/*": ["packages/core/src/*"]
    },
    "types": ["node", "vitest/globals"],
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
